
--MySQL compliant
SELECT CAST(ROUND(SUM(TABLEHALF.H)/2,4) AS NUMERIC(10,4)) FROM (
    SELECT MAX(LAT_N) H
    FROM (
        SELECT TOP 50 PERCENT LAT_N
        FROM STATION
        ORDER BY LAT_N
    ) BOTTOMHALF
    
    UNION ALL
    
    SELECT MIN(LAT_N) H
    FROM (
        SELECT TOP 50 PERCENT LAT_N
        FROM STATION
        ORDER BY LAT_N DESC
    ) TOPHALF
) TABLEHALF
